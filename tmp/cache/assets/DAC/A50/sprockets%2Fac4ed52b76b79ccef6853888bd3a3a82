(function() {
  var root;

  root = typeof exports !== "undefined" && exports !== null ? exports : window;

  root.Contact = (function() {

    Contact.prototype.height = 240;

    Contact.prototype.speed = 300;

    function Contact($el, personal) {
      var _this = this;
      this.$el = $el;
      this.personal = personal;
      if (this.personal) {
        this.$first = $('article:first');
      } else {
        this.$first = $('');
      }
      this.$el.on('click', '.cp-links a', function(ev) {
        var $t;
        ev.preventDefault();
        $t = $(ev.currentTarget);
        if ($t.hasClass('contact-link')) {
          if (_this.contact()) {
            _this.close();
          } else {
            _this.show('contact');
          }
        }
        if ($t.hasClass('portfolio-link')) {
          if (_this.portfolio()) {
            _this.close();
          } else {
            _this.show('portfolio');
          }
        }
        if ($t.hasClass('plus-sign')) {
          if (_this.closed()) {
            return _this.show('contact');
          } else {
            return _this.close();
          }
        }
      });
    }

    Contact.prototype.contact = function() {
      return this.$el.hasClass('contact-open');
    };

    Contact.prototype.portfolio = function() {
      return this.$el.hasClass('portfolio-open');
    };

    Contact.prototype.closed = function() {
      return !(this.contact() || this.portfolio());
    };

    Contact.prototype.close = function() {
      var _this = this;
      return this.$el.find('.contact, .portfolio').animate({
        opacity: 0
      }, this.speed, function() {
        _this.$el.removeClass();
        _this.$first.animate({
          marginTop: 0
        }, _this.speed);
        return _this.$el.find('.top').animate({
          height: 0
        }, _this.speed);
      });
    };

    Contact.prototype.show = function(witch) {
      var _this = this;
      if (this.closed()) {
        this.$el.addClass("" + witch + "-open");
        this.$first.animate({
          marginTop: this.height
        }, this.speed);
        return this.$el.find('.top').animate({
          height: this.height
        }, this.speed, function() {
          return _this.$el.find("." + witch).animate({
            opacity: 1
          }, _this.speed);
        });
      } else {
        return this.$el.find('.contact, .portfolio').animate({
          opacity: 0
        }, this.speed, function() {
          _this.$el.removeClass().addClass("" + witch + "-open");
          return _this.$el.find("." + witch).animate({
            opacity: 1
          }, _this.speed);
        });
      }
    };

    return Contact;

  })();

}).call(this);
