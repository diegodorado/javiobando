-case article.view_as
  -when 'fs'
    %article.full-bg(style="background-image: url(#{article.photos.first.image.url})")
  -when 'ss'
    %article
      .slideshow
        %i.icon-right-arrow
        %i.icon-left-arrow
        %ul
          -article.photos.each do |p|
            %li
              .img-wrapper
                -if p.orientation == 'pt'
                  =image_tag p.image.url(:portrait), :size=> '900x600'
                -else
                  =image_tag p.image.url(:landscape), :size=> '600x900'
              -unless p.description.blank?
                .img-data
                  .img-data-handler
                    %i.icon
                  .img-data-wrapper
                    .top
                      :markdown
                        #{p.description}
                    .bottom

